@model List<Usuario>
@{
    ViewData["Title"] = "Usuários";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h1 class="h3 mb-0">Lista de Usuários</h1>
                </div>
                <div class="card-body p-4">
                    <p class="text-end mb-3">
                        <a asp-action="Criar" class="btn btn-success">
                            <i class="bi bi-person-plus me-2"></i>Novo Usuário
                        </a>
                    </p>
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mt-3">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Login)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Senha)</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Usuario item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Login)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Senha)</td>
                                            <td class="text-center">
                                                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2">
                                                    <i class="bi bi-pencil-square"></i> Editar
                                                </a>
                                                <a asp-action="Apagar" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Apagar
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            Nenhum usuário cadastrado. <a asp-action="Criar">Clique aqui para adicionar um.</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>