@model List<Pessoa>
@{
    ViewData["Title"] = "Pessoa";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h1 class="h3 mb-0">Lista de Pessoas</h1>
                </div>
                <div class="card-body p-4">
                    <p class="text-end">
                        <a asp-action="Criar" class="btn btn-success">
                            <i class="bi bi-plus-circle me-2"></i>Nova Pessoa
                        </a>
                    </p>

                    @if (!string.IsNullOrEmpty(ViewBag.MensagemErro))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.MensagemErro
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mt-3">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Nome)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CodigoFiscal)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().InscricaoEstadual)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NomeFantasia)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Endereco)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Numero)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Bairro)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Cidade)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Estado)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().DataNascimento)</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Pessoa item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CodigoFiscal)</td>
                                            <td>@Html.DisplayFor(modelItem => item.InscricaoEstadual)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NomeFantasia)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Numero)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Bairro)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                            <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                                            <td>
                                                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2">
                                                    <i class="bi bi-pencil-square"></i> Editar
                                                </a>
                                                <a asp-action="Apagar" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Apagar
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            Nenhuma pessoa cadastrada. <a asp-action="Criar">Clique aqui para adicionar uma.</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>